<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_car"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="park.epam.com.parkit.AdminActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1245"
        android:text="ADMIN"
        android:fontStyle="normal"
        android:fontWeight="400"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_count_val"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="count\n0"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/edit_text_empId"
            android:layout_width="180dp"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:hint="employee id"
            android:fontFamily="sans-serif"
            android:textColorHint="@color/white"
            />

        <Button
            android:id="@+id/btn_count"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:text="PARK"
            android:fontFamily="sans-serif"
            android:onClick="parkEmployee"/>

    </LinearLayout>
    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="8dp"
        android:id="@+id/table_vertical_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/border">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="191dp"
                android:layout_column="0"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:fontFamily="sans-serif"
                android:text="Employee ID"></TextView>

            <TextView
                android:id="@+id/textView2"
                android:layout_column="1"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:fontFamily="sans-serif"
                android:text="TimeStamp"></TextView>

        </TableRow>

    </TableLayout>
    </ScrollView>

</LinearLayout>
