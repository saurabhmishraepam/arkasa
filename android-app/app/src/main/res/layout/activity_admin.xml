<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="park.epam.com.parkit.AdminActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ee6023"
        android:fontFamily="sans-serif"
        android:fontStyle="normal"
        android:fontWeight="400"
        android:gravity="center_horizontal"
        android:text="ADMIN"
        android:textColor="#ffff"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="31dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edit_text_empId"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:fontFamily="sans-serif"
            android:hint="Employee ID"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/btn_count"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif"
            android:onClick="parkEmployee"
            android:background="@drawable/button_background"
            android:text="PARK" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/table_vertical_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="8dp">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/border">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_column="0"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:paddingLeft="5dp"
                    android:text="Employee ID"
                    android:textSize="24dp"
                    tools:textColor="@color/primary_darker"></TextView>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="192dp"
                    android:layout_column="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="TimeStamp"
                    android:textSize="24dp"
                    tools:textColor="@color/primary_darker"></TextView>

            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>
